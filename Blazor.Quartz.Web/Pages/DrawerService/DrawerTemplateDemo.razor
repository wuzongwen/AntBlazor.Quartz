@namespace AntDesign
@inherits FeedbackComponent<string, string>

<div>
    value: <Input @bind-Value="value" />
    <br />
    <br />
    <Button Type="@ButtonType.Primary" OnClick="OnClose">提交</Button>
</div>

@code{

    string value;

    protected override void OnInitialized()
    {
        value = this.Options.ToString();
        base.OnInitialized();
    }


    async void OnClose()
    {
        DrawerRef<string> drawerRef = base.FeedbackRef as DrawerRef<string>;
        await drawerRef!.CloseAsync(value);
    }
}